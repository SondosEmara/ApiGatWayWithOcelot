{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:7107"
  },
  "Routes": [
    {
      //Access URl--> https://localhost:7107/auth/login
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/Authentication/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7215
        },
        {
          "Host": "localhost",
          "Port": 5082
        }
      ],
      "LoadBalancer": "RoundRobin",
      "RateLimitOptions": {
        "ClientWhitelist": [], // array of strings
        "EnableRateLimiting": true,
        "Period": "1s", // seconds, minutes, hours, days
        "PeriodTimespan": 60, // only seconds
        "Limit": 1
      }
    },
    {
      //Access URl--> https://localhost:7107/gateway/catalog
      "UpstreamPathTemplate": "/gateway/catalog",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/Catalog/get-products",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7003
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "FileCacheOptions": {
        "TtlSeconds": 45,
        "Region": "europe-central",
        "Header": "OC-Caching-Control",
        "EnableContentHashing": false
      }
    },
    {
      //Send Paramater in Body of the Request
      "UpstreamPathTemplate": "/gateway/catalog",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/Catalog/create-product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7003
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
      //////"RouteClaimsRequirement": {
      //////  "Roles": "User"
      //////}
    }
  ]
}
